<section class="banner contenedor">
    <secrion class="banner_title">
        <form action="/pagos/addPay" method="post">
            <!-- impot nombre alumno -->
            <div class="mb-4">
                <label for="nombreAlumno" class="form-label">Nombre de Alumno</label>
                <input type="text" class="form-control imput" id="nombreAlumno" name="nombreAlumno"
                    placeholder="ingresar nombre del alumno">
            </div>

            <!-- impot apellido alumno -->
            <div class="mb-4">
                <label for="apellidoAlumno" class="form-label">Nombre de Alumno</label>
                <input type="text" class="form-control imput" id="apellidoAlumno" name="apellidoAlumno"
                    placeholder="ingresar nombre del alumno">
            </div>

            <!-- impot pago de alumno -->
            <label for="pagoAlumno" class="form-label">Monto Pagado</label>
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control imput" aria-label="Amount (to the nearest dollar)"
                    id="pagoAlumno" name="pagoAlumno" placeholder="ingresar pago de alumno">
            </div>

            <!-- imput de mes a pagar -->
            <div class="mx-5">
                <label for="mes" class="form-label mx-4">Mes que paga</label>
                <br>
                <input type="month" name="mes" id="mes" step="1" min="2022-01" max="2023-12" value=""
                    class="imput-month">
                <br><br>
            </div>

            <!-- boton de enviar datos -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Guardar Datos</button>
            </div>


        </form>
    </secrion>
    <div class="banner_img">
        <img src="/img/imganes/img.png" alt="">
    </div>

</section>